{
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.renderLineHighlight": "line",
    "editor.multiCursorModifier": "alt",
    "editor.renderWhitespace": "all",
    "editor.snippetSuggestions": "top",
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "terminal.integrated.fontFamily": "MesloLGSForPowerline-Regular",
    "terminal.integrated.fontSize": 10,
    "workbench.startupEditor": "none",
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "search.exclude": {
        "env": true,
        "src/*/build": true,
        "build": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    //Python
    "[python]": {
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.renderWhitespace": "all",
        "editor.tabSize": 4,
        "editor.rulers": [
            120
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.pythonPath": "/usr/local/bin/python3",
    "python.autoUpdateLanguageServer": true,
    "python.autoComplete.showAdvancedMembers": true,
    "python.workspaceSymbols.rebuildOnFileSave": true,
    "python.linting.enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "120"
    ],
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "python.analysis.typeCheckingMode": "strict",
    "java.home": "/Library/Java/JavaVirtualMachines/amazon-corretto-11.jdk/Contents/Home",
    "java.errors.incompleteClasspath.severity": "ignore",
    //Plugins
    "cSpell.userWords": [
        "Abdallah",
        "Adserver",
        "ahodieb",
        "alexa",
        "amazonaws",
        "amzn",
        "ARNs",
        "Autobuild",
        "Backend",
        "boto",
        "cbtransfer",
        "cloudformation",
        "cloudwatch",
        "codebuild",
        "codecommit",
        "codedeploy",
        "codepipeline",
        "cognito",
        "Cooldown",
        "couchbase",
        "datapipeline",
        "datapoints",
        "dataset",
        "Datasets",
        "datastore",
        "Dedup",
        "deduped",
        "deduping",
        "deserialize",
        "deserializer",
        "devo",
        "dynamodb",
        "elasticmapreduce",
        "eventstream",
        "Fargate",
        "filecmp",
        "functools",
        "gringotts",
        "groupby",
        "guice",
        "heapify",
        "integ",
        "itertools",
        "jboss",
        "kibana",
        "Lifecycle",
        "Livecode",
        "oncall",
        "phonescreen",
        "Popen",
        "pytest",
        "quotemark",
        "repos",
        "resteasy",
        "Roadmap",
        "runbook",
        "Serverless",
        "servlet",
        "signup",
        "Templating",
        "Tigger",
        "Userstore",
        "Vertica",
        "Webapp",
        "WEBHOOK",
        "XDCR"
    ],
    "files.exclude": {
        ".viceroy": true,
        "apollo-overrides": true,
        "release-info": true,
        "src/*/build": false,
        "build": true,
        "env": true,
        "packageInfo*": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/*.d.ts": true,
        "**/cdk.out": true,
        "**/.vscode": true
    },
    "files.watcherExclude": {
        "**/build/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/build-tools/**": true,
        "**/doc/**": true
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "diffEditor.ignoreTrimWhitespace": true,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "java.configuration.checkProjectSettingsExclusions": false,
    "eslint.alwaysShowStatus": true,
    "eslint.lintTask.enable": true,
    "eslint.codeActionsOnSave.mode": "all",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "html"
    ],
    "[typescript]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true,
        },
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.centerLayout": true,
    "zenMode.fullScreen": true,
    "files.associations": {
        "*.txt": "markdown"
    },
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "python.languageServer": "Pylance",
    "vsicons.dontShowNewVersionMessage": true,
    "java.project.importOnFirstTimeStartup": "automatic",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "dart.lineLength": 150,
    "cSpell.enabled": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "dart.previewLsp": true,
    "go.autocompleteUnimportedPackages": true,
    "pythonTestExplorer.testFramework": "pytest",
    "python.testing.unittestArgs": [
        "-vv",
        "-s",
        ".",
        "-p",
        "*test*.py"
    ],
    "python.testing.pytestEnabled": true,
    "testing.enableProblemDiagnostics": true,
    "window.zoomLevel": 1,
    "python.testing.pytestArgs": [
        "-vv --diff-type=split"
    ],
}